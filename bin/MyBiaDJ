#!/usr/bin/env ruby
# -*- mode:ruby -*-


require "../lib/MyBiaDJ"

MyBiaDJ::Actions.setup do

  on :rc, :str, :str do |opt, bar|
    rc = MyBiaDJ::record_case
    case opt
    when "update"
      puts "Updating..."
      rc.update
      puts "... done"
    end
    puts
    rc.stats
  end

  on :fs do
    p MyBiaDJ::FileSystem::Virtual::Tags.name
    p MyBiaDJ::FileSystem::Virtual::Tags.path    
    p MyBiaDJ::FileSystem::Virtual::Artists.name
    p MyBiaDJ::FileSystem::Virtual::Artists.path    
  end
  
  
  on :bar, :str, :str do |foo, bar|
    puts "hello from bar #{foo} #{bar}"
  end

  
end


MyBiaDJ::Actions.parse
